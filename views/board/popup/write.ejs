<%- include(VIEWS+'/common/head') %>
<script type="text/javascript">
(function($){
	'use strict';

	var _init = function(){

		$(window).resize(function(){
			window.resizeTo(768, parseInt($('.content-wrapper').height()+100));
		}).resize();

	};

	$(function(){
		_init();

		$(this).on('click', '.procBtn', function(){
			$('.publicFrm').submit();
		});

	});

})( jQuery );
</script>

<form class="publicFrm" method="post" action="/board/saveData">
<input type="hidden" name="_pk" class="_pk" value="<%=row.board_pk%>" />
<div class="card">
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" width="100%" cellspacing="0">
				<colgroup>
					<col width="150px;" />
					<col width="*;" />
				</colgroup>
				<tbody>
					<tr>
						<th class="text-center">제목</th>
						<td class="text-center"><input type="text" name="board_title" class="form-control board_title" value="<%=row.board_title_decode%>" /></td>
					</tr>
					<tr>
						<th class="text-center">내용</th>
						<td class="text-center">
							<textarea name="board_content" class="form-control board_content" rows="10"><%=row.board_content_decode%></textarea>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="card-body text-center">
		<a href="javascript:void(0);" class="btn btn-primary procBtn">저장</a>

	<% if( row.board_pk ) { %>
		<a href="javascript:void(0);" class="btn btn-danger delBtn" data-pk="<%=row.board_pk%>">삭제</a>
	<% } %>

		<a href="javascript:window.close();" class="btn btn-black">닫기</a>
	</div>
</div>
</form>

<%- include(VIEWS+'/common/footer') %>